/**
post begin
*/

.ListView
    margin-bottom: 7em
    .title
        text-align: center
        h1
            font-size: 1.8rem
            font-weight: 400
            margin-bottom: 0.3em
            line-height: 125%
        a
            border-bottom: none
            color: #111
            &:hover
                color: #0e0e0e
                border-bottom: 1px #0e0e0e solid
.ListMeta
    font-size: 0.8em
    color: #bbb
    margin-bottom: 2.5em
    &:hover
        color: #333
    ul
        display: inline
        padding: 0
li.meta-text
    display: inline-block
.more-link
    a
        border-bottom-width: 2px

.PageTitle
    text-align: left
    margin-bottom: 4em
    h1
        font-size: 2rem
        font-weight: 400
        margin-bottom: 0.3em
        margin-left: -10%
        @media screen and (max-width: 1024px)
            font-size: 2rem
            margin-left: auto
            padding-top: 3rem
    a
        border: none
        color: #111
time
    font-family: inherit

.ContentView
    padding-top: 4em

    table
        //border: 1px solid grey
        border: none
        margin-top: 30px
        margin-bottom: 30px
        margin-left: auto
        margin-right: auto
        border-collapse: collapse
        border-spacing: 0
        border-image-width: 0
        padding 0

    th
        border: 1px solid grey
        // border: none
        padding-left: 13px
        padding-right: 13px
        padding-top: 6px
        padding-bottom: 6px
        border-collapse: collapse
        border-image-width: 0
        border-spacing: 0

    td
        border: 1px solid grey
        //border: none
        border-collapse: collapse
        border-image-width: 0
        border-spacing: 0
        padding 0 1em
        


    img
        display: block
        margin: 0 auto

    .ArticleMeta
        font-size: 0.8em
        color: #bbb
        margin: 2.5em auto
        a
            border-bottom: 1px #bbb solid
        &:hover
            color: #333
            a
                border-bottom: 1px #333 solid

        > div:nth-child(1)
            position: relative
            width: 49%
            text-align: right
            &::after
                content: '/'
                font-size: 300%
                font-weight: 100
                position: absolute
                top: 15px
                right: -18px
        > div:nth-child(2)
            width: 49%
            margin-left: auto
            margin-right: 0
        > div:only-child
            width: 100%
            text-align: center
            &::after
                display: none
#nav-wrapper
    text-align: center
#page-nav
    position: relative
    display: inline-block
    padding: 0 1em
.page-number
    margin: 0.3em

.post-copyright {
    margin: 2em 0 0;
    padding: 0.5em 1em;
    background-color: #EDEDED
    border-left: 3px solid #4a4a4a;
    list-style: none;
}

.post-copyright li {
    line-height: 27px;
}

.extend
    border-bottom-color: transparent
    line-height: inherit
    position: absolute
    white-space: nowrap

    &.prev
        right: 100%

    &.next
        left: 100%
