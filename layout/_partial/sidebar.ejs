<aside class='SideBar'>
    <section class='avatar' style="background-image: url(<%- cdn_asset(theme.sidebar_background) %>)">
        <div class='av-pic' style="background-image: url(<%- cdn_asset(theme.avatar) %>)">
        </div>
    </section>
    <section class='menu'>
        <div> <h2> <%= config.title %> </h2> </div>
        <% if (config.subtitle) { %>
            <div> <%= config.subtitle %>  </div>
        <% } %>
        <ul>
          <% for (const m in theme.menu) { %>
            <a href="<%= theme.menu[m] %>" class="Btn">
              <li><%= m %></li>
            </a>  
          <% } %>
        </ul>
    </section>
    <section class="media">
        <% for (const m in theme.media) { %>
            <% if (theme.media[m]) { %>
                <a href="<%- url_for(theme.media[m]) %>" >
                    <!-- <img src="/assets/<%= m %>.svg" /> -->
                    <img src="<%- cdn_asset(theme.media_icon[m]) %>"/>
                </a>
            <% } %>
        <% } %>
    </section>
</aside>
